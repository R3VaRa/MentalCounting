<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">


    <LinearLayout
        android:background="@color/dark_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="10dp"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/textView_Operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operation"/>

        <TextView
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/textView_Resultat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/resultat" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:backgroundTint="@color/gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_AC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button_AC"
                    android:textColor="@color/white" />

                <Button
                    android:backgroundTint="@color/gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_plusMoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button_plusMoins" />

                <Button
                    android:backgroundTint="@color/gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_modulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button_modulo" />

                <Button
                    android:backgroundTint="@color/orange"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_diviser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button__diviser" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button7" />

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button8" />

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button9" />

                <Button
                    android:backgroundTint="@color/orange"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_multiplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button_multiplier" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button4" />

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button5" />

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button6" />

                <Button
                    android:backgroundTint="@color/orange"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_moins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button_moins" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button1" />

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button2" />

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button3" />

                <Button
                    android:backgroundTint="@color/orange"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button_plus" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    />

                <Button
                    android:backgroundTint="@color/dark_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button0" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    />

                <!--                <Button-->
                <!--                    android:backgroundTint="@color/dark_gray"-->
                <!--                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
                <!--                    android:id="@+id/button_virgule"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_margin="2dp"-->
                <!--                    android:text="," />-->

                <Button
                    android:backgroundTint="@color/orange"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/button_egale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/button_egale" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>